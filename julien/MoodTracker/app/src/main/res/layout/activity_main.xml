<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/emoji_joy"
            android:layout_width="101dp"
            android:layout_height="42dp"
            android:id="@+id/btn_joy" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="selectMood" android:tag="@string/emoji_joy"/>
    <Button
            android:text="@string/emoji_cry"
            android:layout_width="101dp"
            android:layout_height="42dp"
            android:id="@+id/btn_cry"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="selectMood" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_wow" app:layout_constraintStart_toEndOf="@+id/btn_joy"
            android:layout_marginStart="8dp" android:tag="@string/emoji_cry"/>
    <Button
            android:text="@string/emoji_wow"
            android:layout_width="103dp"
            android:layout_height="42dp"
            android:id="@+id/btn_wow"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="selectMood" android:tag="@string/emoji_wow"/>
</android.support.constraint.ConstraintLayout>